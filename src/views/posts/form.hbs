<div class="container">
	<div class="py-5 text-center">
		<img class="d-block mx-auto mb-4" src="/img/pngaaa.com-3179068.png" alt="" width="72" height="57" />
		{{#if post}}
			<h2>Edit post form</h2>
		{{else}}
			<h2>Create post form</h2>
		{{/if}}
	</div>

	<div class="row g-5">
		<div>
			<h4 class="mb-3">Post Information</h4>

			<form class="needs-validation" novalidate method="POST" {{#if post}} action="/post/edit/{{post._id}}?_method=PUT"
				{{else}} action="/post/create" {{/if}}>
				<div class="row g-3">
					<div class="col-12">
						<label for="Title" class="form-label">Title</label>
						<div class="input-group has-validation">
							<input type="text" name="title" class="form-control" value="{{post.title}}" id="Title"
								placeholder="Title" required />
							<div class="invalid-feedback">Your Title is required.</div>
						</div>
					</div>

					<div class="col-12">
						<label for="Content" class="form-label">Content</label>
						<div class="input-group has-validation">
							<input type="text" name="content" class="form-control" value="{{post.content}}" id="Content"
								placeholder="Content" required />
							<div class="invalid-feedback">Your Content is required.</div>
						</div>
					</div>

					<div class="col-12">
						<label for="Summary" class="form-label">Summary</label>
						<div class="input-group has-validation">
							<input type="text" name="summary" class="form-control" value="{{post.summary}}" id="Summary"
								placeholder="Summary" required />
							<div class="invalid-feedback">Your Summary is required.</div>
						</div>
					</div>

					<div class="col-12">
						<label for="Image" class="form-label">Image</label>
						<div class="input-group">
							<input type="text" name="image" class="form-control" value="{{post.image}}" id="Image"
								placeholder="Image" />
						</div>
					</div>

					<hr class="my-4" />

					<button class="w-100 btn btn-primary btn-lg" type="submit">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>