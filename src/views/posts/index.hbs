<div class="container-fluid">
	<div class="row">
		<main>
			<h2>Section title</h2>
			<div class="table-responsive">
				<table class="table table-striped table-sm">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Title</th>
							<th scope="col">Summary</th>
							<th scope="col">Slug</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						{{#if posts}}
							{{#each posts}}
								<tr>
									<td>{{sum @index 1}}</td>
									<td>{{title}}</td>
									<td>{{summary}}</td>
									<td>{{slug}}</td>
									<td>
										<a class="btn btn-primary" href="/post/edit/{{_id}}">Edit</a>
										<form action="/post/{{_id}}?_method=DELETE" style="width: autp; float: left" method="POST">
											<button type="submit" class="btn btn-danger">Delete</button>
										</form>
										
									</td>
								</tr>
							{{/each}}
						{{else}}
							<tr>
								<td colspan="5">No records found</td>
							</tr>
						{{/if}}
					</tbody>
				</table>
			</div>
		</main>
	</div>
</div>